<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vistas="clr-namespace:Tiktokcurso.Vistas.Reproductor"
             x:Class="Tiktokcurso.Vistas.Reproductor.panelderecha">
 <StackLayout 
              VerticalOptions="End"
              WidthRequest="60"
              Spacing="30"
              Margin="0,0,15,18">
  <Grid>
   <Frame WidthRequest="60"
          HeightRequest="60"
          Padding="0"
          CornerRadius="40"
          HorizontalOptions="End">
    <Image Source="https://st4.depositphotos.com/13108546/38298/i/450/depositphotos_382983954-stock-photo-studio-shot-young-beautiful-happy.jpg"
           Aspect="AspectFill" />
   </Frame>
   <Grid HorizontalOptions="Center"
         VerticalOptions="End"
         TranslationY="10">
