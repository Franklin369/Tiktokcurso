            VerticalOptions="Center"
            HeightRequest="30"
            WidthRequest="30"
            CornerRadius="15"
            BackgroundColor="#FE2C55" />
    <Label Text="+"
           VerticalOptions="Center"
           FontSize="22"
           HorizontalOptions="Center"
           TextColor="White"
            />
   </Grid>
  </Grid>
  <StackLayout>
   <Image Source="https://i.ibb.co/ZW9j2Z8/me-gusta.png"
          HeightRequest="40" />
   <Label Text="1.2M"
          TextColor="White"
          HorizontalOptions="Center"
          
          FontSize="16" />
  </StackLayout>
  <StackLayout>
   <Image Source="https://i.ibb.co/D8x1NLf/chat-de-burbujas.png"
          HeightRequest="40" />
   <Label Text="8.1k"
          TextColor="White"
          HorizontalOptions="Center"
        
          FontSize="16" />
  </StackLayout>
  <StackLayout>
   <Image Source="https://i.ibb.co/vHsH8Yv/compartir-1.png"
          HeightRequest="40" />
   <Label Text="1266"
          FontSize="16"
          TextColor="White"
        
          HorizontalTextAlignment="Center" />
  </StackLayout>
  <vistas:discogiratorio />
 </StackLayout>
</ContentView>